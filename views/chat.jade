extends common/header

block content
  div.container
      div.hero-unit
          h2 Chat Room
              small &nbsp;this is a webcket demo:(
                a(href="https://github.com/kimhou/app_websocket") https://github.com/kimhou/app_websocket
                )
          div.alert.alert-info
            form#socketForm.form-inline
              div#startContent
                input#userName.span4(type="text",placeholder="input your name")
                &nbsp;
                button#submitNameBtn.btn(type="button") Start
              div#chatContent.hidden
                input#sendInput.span4(type="text",placeholder="input a message")
                &nbsp;
                button#submitBtn.btn(type="submit") Send
          ul#socketMsg
  script

    //load jquery and bootstrap
    seajs.use('http://'+location.host+':3002/socket.io/socket.io.js', function(){

      seajs.use('module/chat/index', function(chat){
          chat.init();
          //seajs.use('bootstrap');
      });
    });
    
    